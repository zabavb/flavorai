generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  recipes  Recipe[]
}

model Recipe {
  id           String   @id @default(uuid())
  title        String
  ingredients  String
  instructions String
  rating       Float?
  authorId     String
  author       User     @relation(fields: [authorId], references: [id])
}
